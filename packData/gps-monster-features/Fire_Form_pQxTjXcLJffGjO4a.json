        "name": "Fire Form",
        "img": "icons/magic/fire/projectile-embers-orange.webp",
        "type": "script",
        "scope": "global",
        "command": "if(args[0].macroPass === \"isHit\") {\n    if(workflow.activity.actionType !== \"mwak\" && workflow.activity.actionType !== \"msak\") return;\n    let target = workflow.token;\n    let measuredDistance = MidiQOL.computeDistance(token,target, {wallsBlock: true, includeCover: true});\n    if(measuredDistance === -1 || measuredDistance > 5) return;\n\n    let damageRoll = await new CONFIG.Dice.DamageRoll(`1d10`, {}, {type: \"fire\", properties: [\"mgc\"]}).evaluate();\n    await MidiQOL.displayDSNForRoll(damageRoll, 'damageRoll');\n\n    const itemData = {\n        name: \"Fire Form - Damage (Fire)\",\n        type: \"feat\",\n        img: macroItem.img\n    }\n\n    await new MidiQOL.DamageOnlyWorkflow(actor, token, damageRoll.total, \"fire\", target ? [target] : [], damageRoll, {itemData: itemData, flavor: \"Fire Form - Damage (Fire)\"});\n}\n\nif(args[0] === \"on\") {\n    let effectOriginActor = await fromUuid(args[1]);\n    let effectOriginToken = await MidiQOL.tokenForActor(effectOriginActor);\n    let checkEffect = actor.appliedEffects.some(e => e.name === \"Ignition\");\n    if(checkEffect) return;\n    let effectData = [{\n      \"origin\": item.uuid,\n      \"duration\": {\n        \"seconds\": 99999\n      },\n      \"disabled\": false,\n      \"name\": \"Ignition\",\n      \"img\": item.img,\n      \"changes\": [\n        {\n          \"key\": \"flags.midi-qol.OverTime\",\n          \"mode\": 0,\n          \"value\": \"turn=start,saveRemove=true,damageRoll=1d10,damageType=fire,name=Ignition\",\n          \"priority\": 20\n        }\n      ],\n      \"transfer\": false\n    }];\n\n    await MidiQOL.socket().executeAsGM(\"createEffects\", { actorUuid: actor.uuid, effects: effectData });\n\n    let damageRoll = await new CONFIG.Dice.DamageRoll(`1d10`, {}, {type: \"fire\", properties: [\"mgc\"]}).evaluate();\n    await MidiQOL.displayDSNForRoll(damageRoll, 'damageRoll');\n\n    const itemData = {\n        name: \"Fire Form - Damage (Fire)\",\n        type: \"feat\",\n        img: item.img\n    }\n\n    await new MidiQOL.DamageOnlyWorkflow(effectOriginActor, effectOriginToken, damageRoll.total, \"fire\", token ? [token] : [], damageRoll, {itemData: itemData, flavor: \"Fire Form - Damage (Fire)\"});\n}",
