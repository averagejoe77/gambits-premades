        "scope": "global",
        "command": "if(args[0] === \"each\") {\n    let percentileRoll = await new CONFIG.Dice.DamageRoll(`1d10`).evaluate();\n    if(percentileRoll.total !== 1) return;\n\n    let durationRoll = await new CONFIG.Dice.DamageRoll(`1d4`).evaluate();\n    let effectData = [\n        {\n            \"icon\": `${macroItem.img}`,\n            \"origin\": `${actor.uuid}`,\n            \"duration\": {\n                \"rounds\": durationRoll.total\n            },\n            \"disabled\": false,\n            \"name\": \"Ring of Invisibility - Paralyzed\",\n            \"changes\": [\n            {\n                \"key\": \"macro.StatusEffect\",\n                \"mode\": 0,\n                \"value\": \"paralyzed\",\n                \"priority\": 20\n            }\n            ],\n            \"transfer\": false\n        }\n    ];\n    await MidiQOL.socket().executeAsGM(\"createEffects\", { actorUuid: actor.uuid, effects: effectData });\n    let originEffect = actor.appliedEffects.find(e => e.name === macroItem.name);\n    if(originEffect) originEffect.delete();\n}",
