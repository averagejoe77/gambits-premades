        "type": "script",
        "scope": "global",
        "command": "if (args[0].macroPass === \"isHit\" && workflow.isCritical) {\n    await foundry.applications.api.DialogV2.wait({\n        window: { title: 'Sacrificial Shield' },\n        content: `\n            <div class=\"gps-dialog-container\">\n                <div class=\"gps-dialog-section\">\n                    <div class=\"gps-dialog-content\">\n                        <div>\n                            <div class=\"gps-dialog-flex\">\n                                <p class=\"gps-dialog-paragraph\">Would you like to destroy your shield to prevent a critical hit?</p>\n                                <div id=\"image-container\" class=\"gps-dialog-image-container\">\n                                    <img src=\"${macroItem.img}\" class=\"gps-dialog-image\">\n                                </div>\n                            </div>\n                        </div>\n                    </div>\n                </div>\n            </div>\n        `,\n        buttons: [{\n            action: \"Yes\",\n            label: \"Yes\",\n            callback: async (event, button, dialog) => {\n                workflow.isCritical = false;\n                workflow.hitDisplayData[workflow.hitTargets.first().document.uuid].hitString = \"hits\";\n\n                let actorPlayer = MidiQOL.playerForActor(actor);\n                ChatMessage.create({\n                    user: actorPlayer.id,\n                    content: `The ${macroItem.name} cracks from the heavy impact, but protects its wearer from a critical hit`,\n                    speaker: ChatMessage.getSpeaker({ token: token })\n                });\n\n                await macroItem.update({\n                    \"system.equipped\": false,\n                    \"name\": `${macroItem.name} (Broken)`\n                });\n            }\n        },\n        {\n            action: \"No\",\n            label: \"No\",\n            callback: async (event, button, dialog) => {\n                return;\n            }\n        }],\n        close: async (event, dialog) => {\n            return;\n        }, rejectClose:false\n    });\n}",
