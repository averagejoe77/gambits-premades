        "type": "script",
        "scope": "global",
        "command": "if(args[0].macroPass === \"isAttacked\") {\n    if(token.actor.items.filter(i => i.name.toLowerCase().includes('shield') && i.system.equipped === true).length > 0) return; // Origin token is using a shield\n    if(workflow.advantage === true) {\n      let effectData = [\n      {\n        \"name\": \"Duskfall Greatsword - Guardless AC\",\n        \"icon\": macroItem.img,\n        \"origin\": macroItem.uuid,\n        \"disabled\": false,\n        \"changes\": [\n          {\n            \"key\": \"system.attributes.ac.value\",\n            \"mode\": 2,\n            \"value\": \"2\",\n            \"priority\": 20\n          }\n        ],\n        \"flags\": {\n          \"dae\": {\n            \"specialDuration\": [\n              \"isAttacked\"\n            ]\n          }\n        },\n        \"transfer\": false\n      }\n    ]\n    await MidiQOL.socket().executeAsGM(\"createEffects\", { actorUuid: actor.uuid, effects: effectData });\n  }\n}",
